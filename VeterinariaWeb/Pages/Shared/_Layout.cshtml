<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Veterinaria_Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .fondo-principal{
            background-image: url('img/puppy.png');
            background-repeat: no-repeat;
            background-size: 100% 100%;
            background-color:violet;

        }
    </style>
</head>
<body class="container fondo-principal">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Veterinaria_Web</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-secondary" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-info" asp-area="" asp-page="/Pacientes/Listado">Listado</a>
                            </li>
                            
                            <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-success" asp-area="" asp-page="/Pacientes/Nuevo">Nuevo</a>
                            </li>
                            
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-dark " asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li>
                                <form asp-page="Listado" method="post" asp-page-handler="Filtrar">
                                 <input type="text" name="IdFiltro"  placeholder="" />
                                  <input type="text" name="Apellido"  placeholder="" />
                                 <input type="submit"  class=" text-dark btn btn-outline-warning"  value="Buscar"/>
                                </form>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Veterinaria_Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
